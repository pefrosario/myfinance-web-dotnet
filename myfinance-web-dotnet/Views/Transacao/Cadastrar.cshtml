@model myfinance_web_dotnet.Models.TransacaoModel;

@{
    ViewData["Title"] = "Registrar Transação Financeira";
}

<h1>@ViewData["Title"]</h1>

<div>
    <form asp-controller="Transacao" asp-action="Cadastrar" method="post">
        <input type="hidden" asp-for="Id" /><br>

        <div  class="form-group">
            <label>Data:</label><br>
            <input type="text" class="form-control"asp-action asp-for="Data"/>
        </div>

        <div  class="form-group">
            <label>Valor:</label><br>
            <input type="text" class="form-control"asp-action asp-for="Valor" step="0.01"/>
        </div>

        <div  class="form-group">
            <label>Plano de Conta</del>:</label><br>
            @Html.DropDownListFor(m => m.PlanoContaId, Model.ListaPlanoContas, new { @class = "form-control" })
        </div>

        <div  class="form-group">
            <label>Histórico:</label><br>
            <input type="text" class="form-control"asp-action asp-for="Historico" step="0.01"/>
        </div>

        <br><br>
        <button type="submit" class="btn btn-block btn-success">Registrar</button>
    </form>
</div>